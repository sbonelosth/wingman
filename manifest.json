{
  "manifest_version": 3,
  "name": "Wingman",
  "version": "1.0",
  "description": "Extracts job postings from the current page and compares them to your resume using AI.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads"
  ],
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "64": "assets/icons/icon-64.png",
    "128": "assets/icons/icon-128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Wingman - Helping you find the right job"
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/jobs/*",
        "*://*.indeed.com/*",
        "*://*.glassdoor.com/*",
        "*://*.monster.com/*",
        "*://*.ziprecruiter.com/*",
        "*://*.simplyhired.com/*",
        "*://*.careerbuilder.com/*",
        "*://*.jobstreet.com/*",
        "*://*.seek.com.au/*",
        "*://*.seek.co.nz/*",
        "*://*.reed.co.uk/*",
        "*://*.totaljobs.com/*",
        "*://*.workopolis.com/*",
        "*://*.bayt.com/*",
        "*://*.naukri.com/*",
        "*://*.foundit.in/*",
        "*://*.jobsdb.com/*",
        "*://*.stepstone.com/*",
        "*://*.myjobstreet.com/*",
        "*://*.adzuna.com/*"
      ],
      "js": [
        "dist/content.js"
      ],
      "run_at": "document_end"
    }
  ]
}